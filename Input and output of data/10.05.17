int main()
{
	WIN32_FIND_DATAA found;
	HANDLE findResult =
		FindFirstFileA(
			"D:\\Winners\\*.bin",
			&found);

	if (findResult == INVALID_HANDLE_VALUE)
	{
		printf("Files not found.");
		return 1;
	}
	while (FileNextFileA(findResult, &found) != INVALID_HANDLE_VALUE)
	{
		printf("File found: %s.", found.cFileName);
	}

}
