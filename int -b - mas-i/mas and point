#include <stdio.h>

/*Связь указателей и массивов.
Арифметические операции над указателями*/

/*Имя массива = указатель на 0 элемент
	&i[0] = указатель на 0 элемент*/

int main()
{
	int i[3];
	int *pI = i;

	printf("&i: %p\n", i);
	printf("&i: %p\n", &i[0]);
	printf("&i: %p\n", &i);

	printf("pI: %p\n", pI);
}

